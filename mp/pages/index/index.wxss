/**index.wxss**/
.header{
  width:100%;
  height:125px;
  display: flex;
  position: relative;
  box-sizing: border-box;
}
.banner{
  display: block;
  width: 100%;
  height:125px;

  opacity: 0.5;
}

.content {
  position: absolute;
  top: 125px;
  left: 0;
  padding-top: 35px;
  width: 100%;
  min-height: 75%;
  box-sizing: border-box;
}

.record{
  width: 100%;
}
.record-item{
  width: 100%;
  height: 80px;
  background-image: linear-gradient(90deg, white 374rpx, #e0e0e0 374rpx, #e0e0e0 376rpx, white 376rpx);
  background-position:0px 0px;
  background-size:100% 100%;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.add-action-icon {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50% , -50%);
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: white;
}
.record-item-icon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50% , -50%);
  width: 31px;
  height: 31px;
  border-radius: 50%;
  background-color: white;
}