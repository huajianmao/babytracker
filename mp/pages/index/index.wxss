/**index.wxss**/

.header {
  display: flex;
  width: 100%;
  position: relative;
  box-sizing: border-box;
}

.banner {
  display: block;
  width: 100%;
  height: 300rpx;
  opacity: 0.5;
  border-bottom: 4rpx solid white;
}

.content {
  position: absolute;
  top: 300rpx;
  padding-top: 70rpx;
  left: 0;
  width: 100%;
  min-height: 75%;
  box-sizing: border-box;
}

.record {
  width: 100%;
}

.record-item {
  width: 100%;
  height: 160rpx;
  background-image: linear-gradient(90deg, white 374rpx, #555 374rpx, #e0e0e0 376rpx, white 376rpx); /* for 50%*/
  /* background-image: linear-gradient(90deg, white 264rpx, #555 264rpx, #e0e0e0 266rpx, white 266rpx); */ /* for 35%*/
  background-position: 0rpx 0rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.record-item .unknown {
  color: darkred;
  font-style: italic;
}

.add-action-icon {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: white;
}

.record-item-icon {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: white;
  border: 12rpx solid white;
  padding: 4rpx;
}

.record-item-time-block {
  width: 50%;
  box-sizing: border-box;
  padding-right: 50rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
  color: #777;
  font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
  font-size: 24rpx;
  margin-top: 20rpx;
}

.record-item-time-time {
  font-size: 36rpx;
}

.record-item-time-date {
  color: #a8a8a8;
}

.record-item-event-block {
  width: 50%;
  box-sizing: border-box;
  padding-left: 50rpx;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  color: #555;
  font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
  font-size: 24rpx;
  flex-direction: column;
}

.record-item-event-event {
  font-size: 36rpx;
  
  width: 90%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}
.record-item-event-event.unknown {
  color: darkred;
  font-style: italic;
}
.record-item-event-note {
  color: #a8a8a8;
  width: 80%;

  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
